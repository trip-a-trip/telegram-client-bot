{
  "compilerOptions": {
    "lib": ["es2017", "es2019"],
    "module": "commonjs",
    "declaration": false,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": true,
    "sourceMap": false,
    "removeComments": true,
    "strictBindCallApply": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "ES2020",
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "&app/*": ["./*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
